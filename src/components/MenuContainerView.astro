---
import menuItems from '../data/menuItemsData';
---

<div class="bg-gray-800 text-white py-4 px-4 sticky top-0 z-50">
  <ul class="flex flex-wrap justify-center md:justify-start items-center gap-4 list-none m-0 p-0 md:pl-10">
    {
      menuItems.map(({ icon, title, url }) => (
        <li class="flex items-center">
          <a href={url} class="text-white text-sm md:text-base px-4 py-2 flex items-center justify-center transition-all duration-300 ease-in-out transform hover:text-orange-500 hover:scale-105">
            {icon && <img src={icon} alt="" class="h-4 w-4 md:h-5 md:w-5 mr-2" />}
            {title}
          </a>
        </li>
      ))
    }
  </ul>
</div>
