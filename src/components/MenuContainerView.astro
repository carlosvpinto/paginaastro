---
import menuItems from '../data/menuItemsData';
---

<div class="bg-gray-800 text-white py-4 px-4 sticky top-0 z-50">
  <ul class="flex flex-wrap justify-start items-center list-none m-0 p-0 pl-10 gap-1 md:gap-4">
    {
      menuItems.map(({ icon, title, url }) => (
        <li class="flex items-center">
          <a href={url} class="text-white text-lg md:text-xl px-1 md:px-4 py-2 flex items-center justify-start transition-all duration-300 ease-in-out transform hover:text-yellow-500 hover:scale-105">
            {icon && <img src={icon} alt="" class="h-4 w-4 md:h-5 md:w-5 mr-1 md:mr-2" />}
            {title}
          </a>
        </li>
      ))
    }
  </ul>
</div>

